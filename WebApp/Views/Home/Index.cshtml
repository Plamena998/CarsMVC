@using Core.Models
@model IEnumerable<CarViewModel>

@{
    ViewData["Title"] = "Top Cars";
}

<h2 class="page-title">Top 10 Cars from 1996</h2>

<div class="card-grid">
    @foreach (var car in Model)
    {
        @await Html.PartialAsync("_CarCard", car)   // Рендерира всяка карта на кола чрез partuial view

        //<partial name="_CarCard.cshtml"></partial>   //друг вариант да добавяне на partial view
    }
</div>

<!-- Modal Window -->
<div id="carModal" class="modal">
    <div class="modal-content">
        <img id="modalImage" src="" alt="Car Image" />
        <h3 id="modalTitle"></h3>
        <div id="modalDetails"></div>
    </div>
</div>



