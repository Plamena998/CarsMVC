@using Core
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@model Core.CarViewModel

<div class="car-card">
    <img src="@Model.ImageUrl" alt="@Model.Make @Model.Model" />
    <div class="card-content">
        <h3>@Model.Make @Model.Model</h3>
        <div class="card-buttons">
            <button class="more-btn btn btn-primary" data-car-id="@Model.Id">
                More
            </button>

            <button class="like-btn btn btn-outline-primary @(Model.IsLiked ? "liked" : "")"
                    data-car-id="@Model.Id"
                    @if (!SignInManager.IsSignedIn(User))
                    {
                            <text>data-bs-toggle="modal" data-bs-target="#loginPromptModal"</text>
                    }
>
                <i class="bi @(Model.IsLiked ? "bi-hand-thumbs-up-fill" : "bi-hand-thumbs-up")"></i>
            </button>
        </div>
    </div>
</div>
