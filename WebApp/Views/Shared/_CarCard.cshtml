@model Core.CarViewModel

<div class="car-card">
    <img src="@Model.ImageUrl" alt="@Model.Make @Model.Model" />
    <div class="card-content">
        <h3>@Model.Make @Model.Model</h3>
        <div class="card-buttons">
            <button class="more-btn btn btn-primary" data-car-id="@Model.Id">
                More
            </button>
            <button class="like-btn" data-car-id="@Model.Id">
                <i class="bi bi-hand-thumbs-up"></i>
            </button>
        </div>
    </div>
</div>
